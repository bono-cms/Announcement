		 <li><a href="<?php echo $this->url('Announcement:Admin:Announce@addAction'); ?>"><i class="glyphicon glyphicon-file"></i> <?php $this->show('Add new announce'); ?></a></li>
		 
		 <?php if ($extendedMode): ?>
		 <li><a href="<?php echo $this->url('Announcement:Admin:Category@addAction'); ?>"><i class="glyphicon glyphicon-folder-open"></i> <?php $this->show('Add a category'); ?></a></li>
